<?xml version="1.0"?>
<project basedir="../../" default="runCheckStyle">

	<property name="shared.lib" value="./lib"/>
	
	<path id="checkstyle.classpath">
		<pathelement location="${shared.lib}/checkstyle/checkstyle-all-4.4.jar" />
	</path>
	
	<property name="checkstyle.home" value="${shared.lib}/checkstyle/" />
	
	<taskdef resource="checkstyletask.properties" classpathref="checkstyle.classpath"/>
	
	<target name="runCheckStyle" >
		<checkstyle config="${checkstyle.home}/lax_checks.xml"
					failOnViolation="false" >
		  <fileset dir="${basedir}/src" includes="**/*.java"/>
		  <formatter type="plain" toFile="CheckStyle.txt"/>
		</checkstyle>
	</target>
</project>