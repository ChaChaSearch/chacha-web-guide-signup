<?xml version="1.0"?>
<project basedir="../../" default="run-yui-compressor">
	
	<property name="shared.lib" value="./lib"/>
	
	<property 
	    name="yui-compressor.jar" 
	    location="${shared.lib}/yuicompressor-2.3.5/build/yuicompressor-2.3.5.jar" />
	<property 
	    name="yui-compressor-ant-task.jar" 
	    location="${shared.lib}/yuicompressor-2.3.5/build/yui-compressor-ant-task-0.3.jar" />

	<path id="task.classpath">
	  <pathelement location="${yui-compressor.jar}" />
	  <pathelement location="${yui-compressor-ant-task.jar}" />
	</path>
	
	<taskdef name="yui-compressor" 
	    classname="net.noha.tools.ant.yuicompressor.tasks.YuiCompressorTask"  classpathref="task.classpath" />

	<target name="run-yui-compressor">
		<yui-compressor 
	    	warn="false" 
	    	munge="true"  
	    	preserveallsemicolons="false" 
	    	fromdir="${yui_compress_fromdir}" 
	    	todir="${yui_compress_todir}">
		</yui-compressor>
	</target>
	
</project>